<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-right">
      <% if @current_user %>
        <%= link_to @current_user.name, root_path %>
        &nbsp;&nbsp;
        <%= link_to "Sign Out", sign_out_path, class: "btn btn-default" %>
      <% else %>
        <%= link_to "Sign In", sign_in_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</nav>
<div class="container">
  <div class="thumbnail">
    <% @posts.each do |post| %>
      <strong><%= post.user.name if post.user %>&nbsp;&nbsp;</strong>
      <small>
        <span class="glyphicon glyphicon-time"></span>
        at <%= post.created_at.strftime("%b %d, %Y") %>
      </small>
      <div class="post">
        <%= post.post_text %>
        <%= image_tag attachment_url(post, :photo, :fill, 400, 150, format: "jpg"), style:"max-width: 100%; min-width: 100%; border: 1px solid #777777;"%>
      <% end %>
      </div>
  </div>
</div>
