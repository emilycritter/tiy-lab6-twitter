<div class="container">
  <h1>Register as a New User</h1>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p class="alert alert-danger"><strong><%= error %></strong></p>
    <% end %>
  <% end %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_area :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_area :password, size: "60x12", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.attachment_field :photo %>
    <% if @user.errors[:photo].any? %>
      <span class="mdl-textfield__error">* <%= @user.errors[:photo].join(", ") %> </span>
    <% end %>
    <%= f.label :photo, class: "" %>
  </div>

  <div class="">
    <%= f.submit class: "btn btn-primary" %>
    or
    <%= link_to "Sign In", sign_in_path %>
  </div>
<% end %>
</div>
