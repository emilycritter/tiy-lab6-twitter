<div class="container">
  <div class="thumbnail">
    <h1>Update Profile Picutre</h1>

    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |error| %>
        <p class="alert alert-danger"><strong><%= error %></strong></p>
      <% end %>
    <% end %>

    <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.label :photo, class: "" %>
        <%= f.attachment_field :photo, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
