<h1>Sign In</h1>

<%= form_tag do %>

  <div class="mdl-textfield mdl-js-textfield">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>

  <div class="mdl-textfield mdl-js-textfield">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Sign In", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    or
    <%= link_to "Sign Up", new_user_path %>
  </div>

<% end %>
