<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |error| %>
    <p class="alert alert-danger"><strong><%= error %></strong></p>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :post_text %>
    <%= f.text_area :post_text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo, class: "" %>
    <%= f.attachment_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
